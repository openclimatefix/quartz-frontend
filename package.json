{
  "name": "@openclimatefix/nowcasting",
  "version": "0.0.0",
  "engines": {
    "node": ">=14 <16"
  },
  "private": true,
  "repository": "git@github.com:openclimatefix/nowcasting.git",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "^1.0.26"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "@openclimatefix/nowcasting-app#build": {
        "dependsOn": [
          "^build",
          "$AUTH0_SECRET",
          "$AUTH0_BASE_URL",
          "$AUTH0_ISSUER_BASE_URL",
          "$AUTH0_CLIENT_ID",
          "$AUTH0_CLIENT_SECRET",
          "$SENTRY_AUTH_TOKEN"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
